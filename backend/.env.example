# Database connection string for Neon Serverless PostgreSQL
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# JWT Secret - MUST match BETTER_AUTH_SECRET in frontend
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-min-32-characters-here

# Better Auth URL (frontend URL for JWKS endpoint)
BETTER_AUTH_URL=http://localhost:3000

# CORS allowed origins (comma-separated for multiple)
# For production, add your Vercel/deployed frontend URL
ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# Clock skew tolerance for JWT validation (in seconds)
# Accounts for minor time differences between client and server
CLOCK_SKEW_SECONDS=30
